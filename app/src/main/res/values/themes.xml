<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NCTApplication" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="textStylehdpi" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    <style name="textStylexhdpi" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    <style name="textStylelarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    <style name="textStylelarge1" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    <style name="textStyletab" parent="@android:style/Widget.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="textStyletablarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="Theme.NCTApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>